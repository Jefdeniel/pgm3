<article class="dinos">
  <h2>I have dinos as friends</h2>
  <ul>
    {{#each friends}}
      <li>
          <h3> {{name}}</h3>

          {{#em}}
            {{#bold}}
            Deze tekst staat in het vet {{firstname}},
            {{/bold}}
          {{/em}}

          {{#link "test" "https://www.google.com" "_blank"}}{{/link}}

          {{#button "primary"}}
            Dit is een knop {{#sum 1 2}} {{/sum}}
          {{/button}}


        {{#unless name}}
          <h3>Unknown</h3>
          {{/unless}}
        <p> age: {{age}}</p>
        <img src="{{image}}" alt="{{name}}" />
      </li>
    {{/each}}
  </ul>
</article>