<article class="dinos">
  <h2>I have dinos as friends</h2>
  <ul>
    {{#each friends}}
      <li>
        <h3> {{name}}</h3>
        <p> {{age}}</p>
        <img src="{{image}}" alt="{{name}}" />
      </li>
    {{/each}}
  </ul>
</article>